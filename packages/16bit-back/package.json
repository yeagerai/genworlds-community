{
  "name": "@yeager/16bit-map-back",
  "version": "0.0.1",
  "description": "Game Server",
  "author": "Nakima S.L.",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "server:start": "ts-node -P ./tsconfig.json --files ./src/server.ts",
    "server:start:local": "ts-node -P ./tsconfig.json -r dotenv/config --files ./src/server.ts",
    "server:watch": "nodemon -x 'ts-node -P ./tsconfig.json --files ./src/server.ts'",
    "mockedWorld:start": "ts-node -P ./tsconfig.json --files ./src/mocks/worldWs.ts",
    "mockedWorld:start:local": "ts-node -P ./tsconfig.json -r dotenv/config --files ./src/mocks/worldWs.ts",
    "mockedWorld:watch": "nodemon -x 'ts-node -P ./tsconfig.json --files ./src/mocks/worldWs.ts'",
    "browser-client:start": "ts-node -P ./tsconfig.json --files ./test/manual/browserClient.ts",
    "browser-client:watch": "nodemon -x 'ts-node -P ./tsconfig.json --files ./test/manual/browserClient.ts'",
    "clean": "rimraf ./dist && rimraf *.tsbuildinfo",
    "build:src": "npm run clean && tsc -p ./tsconfig.build.json",
    "build:test": "npm run clean && tsc -p ./tsconfig.json",
    "test": "npm run test:e2e",
    "test:e2e": "jest --config ./test/jest.config.ts",
    "lib:check": "ncu -t minor",
    "lib:upgrade": "ncu -u -t minor && npm install",
    "lint": "eslint --ext .ts src/ shared/ test/",
    "lint:fix": "eslint --fix --ext .ts src/ shared/ test/",
    "align": "npm remove --save anything && npm remove --save-dev whatever",
    "prepare": "[ -d '.husky' ] && husky install || true"
  },
  "dependencies": {
    "@colyseus/core": "^0.15.4",
    "@colyseus/mongoose-driver": "^0.15.0",
    "@colyseus/monitor": "^0.15.1",
    "@colyseus/redis-driver": "^0.15.1",
    "@colyseus/redis-presence": "^0.15.1",
    "@colyseus/schema": "^2.0.9",
    "@colyseus/ws-transport": "^0.15.0",
    "@sentry/node": "^7.52.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "method-override": "^3.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^7.2.0",
    "morgan": "^1.10.0",
    "ts-node-dev": "^2.0.0",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.37.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/method-override": "0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.14",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "axios": "^1.4.0",
    "colyseus.js": "^0.15.8",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.12",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@app": "src",
    "@shared": "shared"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
